<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="always"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:roundedCorners="top_left|top_right">

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OneUI Project Team" />

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:orientation="vertical">

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/about_bottom_dev_yann"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:showTopDivider="false"
                tools:icon="@drawable/ic_oui_creatures_outline"
                app:title="Yanndroid" />

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/about_bottom_dev_mesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:icon="@drawable/ic_oui_creatures_outline"
                app:title="Salvo Giangreco" />

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/about_bottom_dev_tribalfs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:icon="@drawable/ic_oui_creatures_outline"
                app:title="Tribalfs"/>

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open source licenses" />

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/about_bottom_oss_apache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="Apache License 2.0"
                app:showTopDivider="false"
                app:summary="androidx  •  material-components-android • sesl-androidx  •  sesl-material-components-android  •  lottie" />

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/about_bottom_oss_mit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="MIT License"
                app:summary="oneui-design" />

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

        <dev.oneuiproject.oneui.widget.RelatedCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:title="Useful links">

            <TextView
                android:id="@+id/about_bottom_relative_jetpack"
                style="@style/OneUI.RelativeLinkTextViewStyle"
                android:text="Android Jetpack" />

            <TextView
                android:id="@+id/about_bottom_relative_material"
                style="@style/OneUI.RelativeLinkTextViewStyle"
                android:text="Material Components" />

            <TextView
                android:id="@+id/about_bottom_relative_sesl_androidx"
                style="@style/OneUI.RelativeLinkTextViewStyle"
                android:text="SESL Android Jetpack (Unofficial)" />

            <TextView
                android:id="@+id/about_bottom_relative_sesl_material"
                style="@style/OneUI.RelativeLinkTextViewStyle"
                android:text="SESL Material Components for Android (Unofficial)" />

            <TextView
                android:id="@+id/about_bottom_relative_design6"
                style="@style/OneUI.RelativeLinkTextViewStyle"
                android:text="OneUI6 Design Lib" />" />

        </dev.oneuiproject.oneui.widget.RelatedCard>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>